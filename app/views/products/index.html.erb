<p> Вы вошли под именем <%= current_user.email %></p>
<p> <%= link_to "Выход/Активные сессии", "/logout" %></p>

<h2> Каталог продуктов </h2>
<p> <%= link_to "Корзина", "/cart" %></p>



<% @products.each do |product| %>

  <div class="product-item">
    <img src= <%= product.picture %> width="200" >
    <div class="product-list">
      <h3><%= link_to product.name, "/product/#{product.id}" %></h3>
      <span class="price">₽ <%= product.price %> </span>

      <%= button_to 'В корзину', "/add/#{product.id}" ,  method: :post %>

    </div>
  </div>

<% end %>
